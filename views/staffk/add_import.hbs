<div class="app__container">
    {{> headers/headerStaffk}}
        <div class="staff-product" style="font-size: 1.8rem; padding: 40px 40px 0">
            <div class="row">
                    <div class="col-lg-3" style="background-color: rgb(255,255,255)">
                    <div class="mx-3">
                        <div class="form-group mt-5">
                            {{#if staff}}
                                <b>Tên nhân viên: {{staff.username}}</b> <br/>
                                <i>Mã nhân viên:</i>  <i id="import-id-staff">{{staff.staff_id}}</i> <br/>
                            {{/if}}

                            <label class="mt-3" for="id-product">Nhập ID sản phẩm</label>
                            <input id="id-product-import" type="text" name="id-product" class="form-control" style="height: 30px; font-size: 1.6rem; padding: 2px 0 2px 16px">
                            <div>Tên sản phẩm: <i id="name-remain-product-import"></i></div>
                            <div>Số lượng sản phẩm còn lại: <i id="remain-product-import"></i></div>
                        </div>
                        <div class="form-group">  
                            <div class="row mt-3 mb-3">
                                <div class="col-lg-12">
                                    <label for="quantity">Nhập số Lượng</label>
                                    <input id="import_quantity" type="text" name="import_quantity" class="form-control" value="1" style="height: 40px; font-size: 1.6rem; padding: 2px 0 2px 16px">
                                </div>
                            </div>            
                        </div>
                        <div class="form-group">
                            <button onclick="" type="button" class="btn btn-primary btn_add_product_import" style="font-size: 16px">Thêm</button>
    
                        </div>
                    </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="mx-3">
                            <div class="mt-3 mb-5" style="width:100%">
                                <table cellpadding="0" cellspacing="0" class="table table-striped mt-3 mb-5" style="border-collapse: collapse;">
                                    <thead>
                                        <tr>
                                            <td colspan="5" style="text-align:center;"><b>Phiếu nhập hàng</b></td>
                                        </tr>
                                        <tr style="text-align: center;">
                                            <td>Tên sản phẩm</td>
                                            <td>Giá</td>
                                            <td>Số lượng</td>
                                            <td>Thành tiền(VNĐ)</td>
                                            <td>Chỉnh sửa</td>
                                        </tr>
                                    </thead>
                                    <tbody id="table-body-import" style="text-align: center;">
                                        
                                    </tbody>
                                </table>
                                <hr size="1">
                                <div class="form-group">
                                    <label for="phone">Nhập số điện thoại</label>
                                    <input id="import-phone-customer" type="text" name="phone" class="form-control" value="" style="height: 40px; font-size: 1.6rem; padding: 2px 0 2px 16px">

                                    <label for="address">Địa chỉ</label>
                                    <input id="import-address-customer" type="text" name="address" class="form-control" value="" style="height: 40px; font-size: 1.6rem; padding: 2px 0 2px 16px">
                                </div>
                                Ngày Lập: <span id="day_create_import"></span>            
                                <button onclick="" class="btn btn-primary btn-create-import" href="#" style="float:right; font-size: 16px; padding: 4px 8px">Tạo phiếu</button>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    {{> footers/footerAdmin}}
</div>

