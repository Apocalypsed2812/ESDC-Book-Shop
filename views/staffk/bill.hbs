<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

{{!-- View Bill --}}
<div class="modal modal-view-bill">
    <div class="modal__overlay"></div>
    <div class="modal__body modal__container">
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <h2 class="view-product-heading">Xem thông tin hóa đơn</h2>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="title">Tên khách hàng: </span> 
                    <b name="title" id="view-id_customer-bill"></b>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="description">Tổng tiền: </span>
                    <span name="description" id="view-total-bill"></span>
                    <span>đ</span>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="id-product-category">SDT khách hàng: </span>
                    <i name="id-product-category"  id="view-phone-bill"></i>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="id-product-category">Địa chỉ khách hàng: </span>
                    <i name="id-product-category"  id="view-address-bill"></i>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="id-product-category">Ngày tạo: </span>
                    <i name="id-product-category"  id="view-date-bill"></i>
                </div>
                <div class="auth-form-staff-control">
                    <button class="btn-close-view-bill">Đóng</button>
                    <button class="btn-detail-view-bill">Chi Tiết</button>
                </div>    
            </div>
        </div>  
    </div>
</div>

{{!-- View bill detail --}}
<div class="modal modal-detail-view-bill">
    <div class="modal__overlay"></div>
    <div class="modal__body modal__container">
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <h2 class="view-product-heading">Chi tiết hóa đơn</h2>
                <div class="view-detail-body">

                </div>
                <div class="auth-form-staff-control">
                    <button class="btn-close-view-detail-bill">Đóng</button>
                </div>    
            </div>
        </div>  
    </div>
</div>

{{!-- Edit Product --}}
<div class="modal modal-edit-bill">
    <div class="modal__overlay modal__overlay-register"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <div class="auth-form__header">
                    <h2>Sửa sản phẩm</h2>
                </div>

                <div class="auth-form__form">
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Mã khách hàng" name="name" id="id_customer-edit-bill">
                    </div>
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Địa chỉ khách hàng" name="quantity" id="address-edit-bill">
                    </div>
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Số điện thoại khách hàng" name="old_price" id="phone-edit-bill">
                    </div>
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Ngày lập" name="new_price" id="date-edit-bill">
                    </div>
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Tổng tiền" name="description" id="total-edit-bill">
                    </div>
                </div>

                <div class="auth-form__controls auth-form__controls-add">
                    <button class="btn auth-form__controls-back btn--normal btn-close-edit-bill" style="font-size: 1.6rem; background-color: rgba(0, 0, 0, 0.05);">Đóng</button>
                    <button class="btn btn--primary btn-edit-bill" style="font-size: 1.6rem">Sửa</button>
                </div>
            </div>
        </div>
    </div>
</div>