<div class="app__container">
    {{> headers/headerStaffk}}
    <div class="staff-product">
        <div class="grid wide">
            <h2 class="text-center text-danger pt-5" style="font-size: 2.5rem;">Quản lý hóa đơn</h2>
            <div style="overflow-x:auto;">
                <table cellpadding="10" cellspacing="10" border="0" class="table table-product">
                    <thead style="text-align: center;">
                        <tr>
                            <td></td>
                            <td>Tên khách hàng</td>
                            <td>Địa chỉ</td>
                            <td>Số điện thoại</td>
                            <td>Tổng tiền</td>
                        </tr>
                    </thead>					
                    <tbody id="tbody" style="text-align: center;">
                        {{#each bill}}
                            <tr class="item">
                                {{#if product}}
                                <td style="width: 160px">
                                    <a class="view-bill btn-staff-product" data-id_customer="{{name_customer}}" data-address="{{address}}" data-total="{{total}}" data-phone="{{phone}}" data-date="{{date}}" data-id="{{_id}}">
                                        <i class="fas fa-eye"></i> 
                                    </a>
                                </td>
                                {{/if}}
                                <td>{{name_customer}}</td>
                                <td>{{address}}</td>
                                <td>{{phone}}</td>
                                <td>{{total}}</td>						
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{> footers/footerAdmin}}
</div>

