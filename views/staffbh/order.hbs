{{!-- View Bill --}}
<div class="modal modal-view-order">
    <div class="modal__overlay"></div>
    <div class="modal__body modal__container">
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <h2 class="view-product-heading">Xem thông tin đơn hàng</h2>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="title">Tên khách hàng: </span> 
                    <b name="title" id="view-name-order"></b>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="description">Tổng tiền: </span>
                    <span name="description" id="view-total-order"></span>
                    <span>đ</span>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="id-product-category">SDT khách hàng: </span>
                    <i name="id-product-category"  id="view-phone-order"></i>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="id-product-category">Địa chỉ khách hàng: </span>
                    <i name="id-product-category"  id="view-address-order"></i>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="id-product-category">Ngày tạo: </span>
                    <i name="id-product-category"  id="view-date-order"></i>
                </div>
                <div class="form-group" style="font-size: 1.8rem">
                    <span for="id-product-category">Trạng thái: </span>
                    <i name="id-product-category"  id="view-status-order"></i>
                </div>
                <div class="auth-form-staff-control">
                    <button class="btn-close-staff-view-order">Đóng</button>
                    <button class="btn-detail-view-order">Chi Tiết</button>
                </div>    
            </div>
        </div>  
    </div>
</div>

{{!-- View bill detail --}}
<div class="modal modal-detail-view-order">
    <div class="modal__overlay"></div>
    <div class="modal__body modal__container">
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <h2 class="view-product-heading">Chi tiết đơn hàng</h2>
                <div class="view-detail-body-order">

                </div>
                <div class="auth-form-staff-control">
                    <button class="btn-close-view-detail-order">Đóng</button>
                </div>    
            </div>
        </div>  
    </div>
</div>

{{!-- Edit Product --}}
<div class="modal modal-edit-order">
    <div class="modal__overlay modal__overlay-register"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <div class="auth-form__header">
                    <h2>Sửa đơn hàng</h2>
                </div>

                <div class="auth-form__form">
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Mã khách hàng" name="name" id="name-edit-order">
                    </div>
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Địa chỉ khách hàng" name="quantity" id="address-edit-order">
                    </div>
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Số điện thoại khách hàng" name="old_price" id="phone-edit-order">
                    </div>
                    <div class="auth-form__group">
                        <select required class="auth-form__input" id="status-edit-order">
                            <option value="Chờ Lấy Hàng">Chờ Lấy Hàng</option>
                            <option value="Đang Giao">Đang Giao</option>
                            <option value="Đã Giao">Đã Giao</option>
                            <option value="Đã Hủy">Đã Hủy</option>
                        </select>
                    </div>
                    <div class="auth-form__group">
                        <input required type="text" class="auth-form__input" placeholder="Tổng tiền" name="description" id="total-edit-order">
                    </div>
                </div>

                <div class="auth-form__controls auth-form__controls-add">
                    <button class="btn auth-form__controls-back btn--normal btn-close-edit-order" style="font-size: 1.6rem; background-color: rgba(0, 0, 0, 0.05);">Đóng</button>
                    <button class="btn btn--primary btn-edit-order" style="font-size: 1.6rem">Sửa</button>
                </div>
            </div>
        </div>
    </div>
</div>