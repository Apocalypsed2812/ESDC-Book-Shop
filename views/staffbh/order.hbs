<div class="app__container">
    {{> headers/headerStaffbh}}
    <div class="staff-product">
        <div class="grid wide">
            <h2 class="text-center text-danger pt-5" style="font-size: 2.5rem;">Quản lý đơn hàng</h2>
            <div style="overflow-x:auto;">
                <table cellpadding="10" cellspacing="10" border="0" class="table table-product">
                    <thead style="text-align: center;">
                        <tr>
                            <td></td>
                            <td>Tên khách hàng</td>
                            <td>Địa chỉ</td>
                            <td>Tổng tiền</td>
                            <td>Trạng thái</td>
                        </tr>
                    </thead>					
                    <tbody id="tbody" style="text-align: center;">
                        {{#each order}}
                            <tr class="item">
                                {{#if product}}
                                <td style="width: 160px">
                                    <a class="staff-view-order btn-staff-product" data-address="{{address}}" data-total="{{total}}" data-phone="{{phone}}" data-name="{{name}}" data-id="{{_id}}" data-status="{{status}}" data-date="{{date}}">
                                        <i class="fas fa-eye"></i> 
                                    </a>
                                    <a href="#" class="staff-edit-order btn-staff-product" data-address="{{address}}" data-total="{{total}}" data-phone="{{phone}}" data-name="{{name}}" data-id="{{_id}}" data-status="{{status}}">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="#" class="delete-product btn-staff-product" data-toggle="modal" data-target="#delete-modal" data-name="{{name_customer}}" data-address="{{address}}" data-total="{{total}}" data-image="{{status}}" data-id="{{_id}}">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                {{/if}}
                                <td>{{name}}</td>
                                <td>{{address}}</td>
                                <td>{{total}}</td>	
                                <td>{{status}}</td>					
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{> footers/footerAdmin}}
</div>

